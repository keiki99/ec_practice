<h1>ジャンル一覧・追加</h1>

<%= form_with model: @new_genre, url: admin_genres_path, local: true do |f| %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit '新規登録' %>
<% end %>


<h2>ジャンル</h2>

<table class="table">
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>編集</td>
    </tr>
  <% end %>
</table>